<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="#eeeeee" />

        <Button
            android:id="@+id/create_qr1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="编码: 生成二维码无LOGO"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/create_qr2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="编码: 生成二维码有LOGOUrl"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/create_qr3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="编码: 生成二维码有LOGORAW"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/create_qr4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="编码: 生成二维码有LOGOAsset"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/decode_qr1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="解码: 二维码图片"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/decode_qr2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="解码: 扫描二维码"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/decode_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            android:gravity="center"
            android:text="解码: 扫描条形码"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
